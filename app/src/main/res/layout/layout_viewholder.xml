<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foto_id"
        android:contentDescription="@string/content_description"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/titulo_viewholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/foto_id"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="30sp"
        android:text="Título padrão" />
    <TextView
        android:id="@+id/preview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titulo_viewholder"
        android:layout_toEndOf="@+id/titulo_viewholder"
        android:layout_alignBottom="@+id/foto_id"
        android:layout_alignStart="@+id/titulo_viewholder"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="Prévia da entrada"/>

</RelativeLayout>
